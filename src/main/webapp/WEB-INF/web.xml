<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.category.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <url-pattern>/categories/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetListCategoryServlet</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.category.GetListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetListCategoryServlet</servlet-name>
        <url-pattern>/categories</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FindCategoryServlet</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.category.FindCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindCategoryServlet</servlet-name>
        <url-pattern>/categories/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.category.UpdateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <url-pattern>/categories/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.category.DeleteCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <url-pattern>/categories/delete</url-pattern>
    </servlet-mapping>
<!--    Food-->
    <servlet>
        <servlet-name>CreateFoodServlet</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.food.CreateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateFoodServlet</servlet-name>
        <url-pattern>/foods/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetListServlet</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.food.GetListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetListServlet</servlet-name>
        <url-pattern>/foods</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FindFoodServlet</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.food.FindFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindFoodServlet</servlet-name>
        <url-pattern>/foods/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateFoodServlet</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.food.UpdateFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateFoodServlet</servlet-name>
        <url-pattern>/foods/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.food.DeleteFoodServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFoodServlet</servlet-name>
        <url-pattern>/foods/delete</url-pattern>
    </servlet-mapping>
<!--    cart-->
    <servlet>
        <servlet-name>AddToCartController</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.cart.AddToCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCartController</servlet-name>
        <url-pattern>/cart/add</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>GetCartController</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.cart.GetCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCartController</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>UpdateCartController</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.cart.UpdateCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCartController</servlet-name>
        <url-pattern>/cart/update</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>DeleteCartItemController</servlet-name>
        <servlet-class>com.example.assignmentfood.controller.cart.DeleteCartItemController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCartItemController</servlet-name>
        <url-pattern>/cart/delete</url-pattern>
    </servlet-mapping>

</web-app>
